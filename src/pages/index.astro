---
// Importamos los componentes y la funci√≥n getAgents.
import Layout from "../layouts/Layout.astro";
import Info from "../components/Info.astro";
import AgentSearch from "../components/AgentSearch.astro";
import { getAgents } from "../lib/mongo.js";

// Obtenemos todos los agentes.
const agents = await getAgents();
---
<!--- Layout -->
<Layout>
  <!--- Main -->
  <main class="container mx-auto p-5">
    <!--- Info -->
    <Info />
    <!--- Titulo -->
    <h1 class="text-3xl font-bold text-center py-6">Agentes</h1>
    <!--- Buscador -->
    <div class="flex justify-between items-center">
      <AgentSearch agents={agents} />
    </div>
  </main>
</Layout>
